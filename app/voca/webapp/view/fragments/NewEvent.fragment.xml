<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="_IDGenDialog2"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
        title="New event"
        contentWidth="30rem"
    >
        <f:Form
            id="newEventForm"
            editable="true"
            ariaLabelledBy="Title1"
        >
            <f:layout>
                <f:ResponsiveGridLayout
                    id="_IDGenResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                />
            </f:layout>
            <f:formContainers>
                <f:FormContainer
                    id="_IDGenFormContainer1"
                    ariaLabelledBy="Title2"
                >
                    <f:formElements>
                        <f:FormElement
                            id="_IDGenFormElement"
                            label="Name"
                        >
                            <f:fields>
                                <Input
                                    value="{name}"
                                    id="name"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement
                            id="_IDGenFormElement4"
                            label="Description"
                        >
                            <f:fields>
                                <!-- TODO rich text editor? -->
                                <TextArea
                                    value="{description}"
                                    id="description"
                                    height="10rem"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement
                            id="_IDGenFormElement6"
                            label="Date start/ Date end"
                        >
                            <f:fields>
                                <DatePicker
                                    id="DP2"
                                    value="{date_start}"
                                    valueFormat="yyyy-MM-dd"
                                    displayFormat="long"
                                    change="handleChange"
                                    class="sapUiSmallMarginBottom"
                                >
                                    <layoutData>
                                        <l:GridData
                                            id="_IDGenGridData2"
                                            span="XL3 L1 M3 S4"
                                        />
                                    </layoutData>
                                </DatePicker>
                                <DatePicker
                                    id="DP3"
                                    value="{date_end}"
                                    valueFormat="yyyy-MM-dd"
                                    displayFormat="long"
                                    change="handleChange"
                                    class="sapUiSmallMarginBottom"
                                >
                                    <layoutData>
                                        <l:GridData
                                            id="_IDGenGridData3"
                                            span="XL3 L1 M3 S4"
                                        />
                                    </layoutData>
                                </DatePicker>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement
                            id="_IDGenFormElement1"
                            label="Address"
                        >
                            <f:fields>
                                <Input
                                    id="_IDGenInput1"
                                    value="{address_address}"
                                >
                                    <layoutData>
                                        <l:GridData
                                            id="_IDGenGridData"
                                            span="XL1 L1 M3 S4"
                                        />
                                    </layoutData>
                                </Input>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement
                            id="_IDGenFormElement2"
                            label="City"
                        >
                            <f:fields>
                                <Input
                                    id="_IDGenInput2"
                                    value="{address_city}"
                                >
                                    <layoutData>
                                        <l:GridData
                                            id="_IDGenGridData1"
                                            span="XL1 L1 M3 S4"
                                        />
                                    </layoutData>
                                </Input>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement
                            id="_IDGenFormElement3"
                            label="Country"
                        >
                            <f:fields>
                            <!-- TODO Insufficient to store countries -->
                                <ComboBox
                                    id="_IDGenComboBox1"
                                    items="{
                                        path: '/Country',
                                        sorter: { path: 'name' }
                                    }"
                                >
                                    <core:Item
                                        id="_IDGenItem1"
                                        key="{code}"
                                        text="{name}"
                                    />
                                </ComboBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement
                            id="_IDGenFormElement5"
                            label="Labels"
                        >
                            <f:fields>
                                <MultiComboBox
                                    id="_IDGenMultiComboBox"
                                    selectionChange="handleSelectionChange"
                                    selectionFinish="handleSelectionFinish"
                                    items="{
                                        path: '/Labels',
                                        sorter: { path: 'name' }
                                    }"
                                >
                                    <core:Item
                                        id="_IDGenItem2"
                                        key="{ID}"
                                        text="{name}"
                                    />
                                </MultiComboBox>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
        <buttons>
            <Button
                id="_IDGenButton7"
                text="Close"
                press="onNewEventClose"
            />
            <Button
                id="_IDGenButton8"
                text="Create"
                type="Emphasized"
                press="onNewEventCreate"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
